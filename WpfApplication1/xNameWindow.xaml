<Window x:Class="WpfApplication1.xNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="xNameWindow" Height="218" Width="300" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <sys:String x:Key="myString">Hello I am ResourcesString</sys:String>
    </Window.Resources>
    <StackPanel>
        <TextBox Margin="5"/>
        <Button Content="OK1" Margin="5" Click="Button_Click" MouseDoubleClick="Button_MouseDoubleClick"/>
        <TextBox x:Name="textBox" Margin="5"/>
        <TextBox Text="{StaticResource myString}" Margin="5"/>
        <TextBox x:Name="textBox_Copy" Margin="5"/>
        <Button Content="ShowKeyContent" Margin="5" Click="ShowKeyContent_Click"/>
    </StackPanel>
</Window>
