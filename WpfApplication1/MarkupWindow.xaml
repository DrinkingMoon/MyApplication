<Window x:Class="WpfApplication1.MarkupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MarkupWindow" Height="199" Width="300">
    <StackPanel Background="LightSlateGray">
        <TextBox x:Name="textBox1" Text="{Binding ElementName=slider1, Path=Value, Mode=OneWay}" Margin="5" FontSize="25"/>
        <Slider x:Name="slider1" Margin="5"/>
        <TextBox x:Name="textBox2" Margin="5" FontSize="25">
            <TextBox.Text>
                <Binding ElementName="slider1" Path="Value" Mode="OneWay"/>
            </TextBox.Text>
        </TextBox>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="button1" Height="20" Width="120" Margin="10" Click="button1_Click" >OK</Button>
            <Button x:Name="button2" Height="20" Width="120" Margin="10" Click="button2_Click">OK</Button>
            <x:Code>
                <![CDATA[
        private void button2_Click(object sender, RoutedEventArgs e)
        {
            MessageBox.Show("代码在前面");
        }
                ]]>
            </x:Code>
        </StackPanel>
    </StackPanel>

</Window>
