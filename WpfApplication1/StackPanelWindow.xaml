<Window x:Class="WpfApplication1.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StackPanelWindow" Height="196" Width="300">
    <StackPanel Background="LightBlue">
        <TextBox x:Name="textBox1" Height="30" Margin="5"/>
        <TextBox x:Name="textBox2" Height="30" Margin="5"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="textBox3" Width="160" Height="30" Margin="5"/>
            <TextBox x:Name="textBox4" Width="105" Height="30" Margin="5"/>
        </StackPanel>
        <Button x:Name="button1" Margin="5">
            <Image x:Name="img1" Width="30" Height="30" Source="Resources/xiaolian.jpg"/>
        </Button>
    </StackPanel>

</Window>
