<Window x:Class="WpfApplication3.BindingADODoNet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BindingADODoNet" Height="700" Width="300">
    <StackPanel Background="LightBlue">
        <Button Content="Load" BorderBrush="Black" Margin="5" Click="Button_Click"/>
        <ListBox Name="lstBox" BorderBrush="Black" Height="100" Margin ="5"/>
        <ListView Name="lstView" BorderBrush="Black" Height="100"  Margin ="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="60" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Name" Width="80" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Age" Width="60" DisplayMemberBinding="{Binding Age}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
