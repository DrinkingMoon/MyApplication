<Window x:Class="WpfApplication6.ControlTemplateFind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication6"
        mc:Ignorable="d"
        Title="ControlTemplateFind" Height="300" Width="464">
    <Window.Resources>
        <ControlTemplate x:Key="controlTp">
            <StackPanel Background="Orange">
                <TextBox x:Name="txt1" Margin="5"/>
                <TextBox x:Name="txt2" Margin="5"/>
                <TextBox x:Name="txt3" Margin="5"/>
                <StackPanel Margin=" 5">
                    <DatePicker x:Name="dp1"/>
                    <Button x:Name="bt2" Width="300" Height="50" Margin="5">
                        <Image x:Name="img1" Source="Img/ImgLogo/Season.jpg" Margin="5"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>
    <StackPanel Background="Yellow">
        <UserControl x:Name="uc" Template="{StaticResource controlTp}" Margin=" 5"/>
        <Button Margin="10" HorizontalAlignment="Center" x:Name="btn1" Width="120" 
                Height="30" Content="Find by Name" Click="Btn1_Click"/>
    </StackPanel>
</Window>
