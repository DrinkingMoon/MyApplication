<Window x:Class="SortListView.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ext="clr-namespace:SortListView.Extention"
	Title="Add Sort to ListView" Height="300" Width="300">
	<DockPanel>
		<Button Content="Add New"
				DockPanel.Dock="Bottom"
				Click="OnAddButtonClick"/>
		<ListView ext:ListViewBehavior.HeaderSort="True"
				  ItemsSource="{Binding}">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Name"
									DisplayMemberBinding="{Binding ItemName}"
									ext:ListViewBehavior.SortField="ItemName"/>
					<GridViewColumn Header="Value"
									DisplayMemberBinding="{Binding ItemValue}"
									ext:ListViewBehavior.SortField="ItemValue"/>
				</GridView>
			</ListView.View>
		</ListView>
	</DockPanel>
</Window>
