<Window x:Class="WpfApplication2.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StackPanelWindow" Height="220" Width="300">
    <Grid>
        <GroupBox Header="请选择没有错别字的成语" BorderBrush="Black">
            <StackPanel Margin="5">
                <CheckBox Margin="5" Content="A.迫不及待"/>
                <CheckBox Margin="5" Content="B.首屈一指"/>
                <CheckBox Margin="5" Content="C.陈词滥调"/>
                <CheckBox Margin="5" Content="D.唉声叹气"/>
                <CheckBox Margin="5" Content="E.不可理喻"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="清空" Margin="5" Width="50" />
                    <Button Content="确定" Margin="5" Width="50" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
