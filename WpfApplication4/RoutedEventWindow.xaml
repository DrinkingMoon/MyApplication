<Window x:Class="WpfApplication4.RoutedEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RoutedEventWindow" Height="200" Width="200">
    <Grid x:Name="gridRoot" Background="Lime">
        <Grid Margin="10" Background="Blue" x:Name="gridA" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="0" Background="Red" Margin="10" x:Name="canvasLeft">
                <Button x:Name="buttonLeft" Background="RoyalBlue" Margin="10" Width="40" Height="100">
                    <Button Margin="10" Width="15" Height="60" Content="L" x:Name="buttonL" />
                </Button>
            </Canvas>
            <Canvas Grid.Column="1" Background="Yellow" Margin="10" x:Name="canvasRight" >
                <Button Margin="10" Width="40" Height="100" x:Name="buttonRight" Background="LightBlue">
                    <Button Margin="10" Width="15" Height="60" Content="R" x:Name="buttonR"/>
                </Button>
            </Canvas>
        </Grid>
    </Grid>
</Window>
